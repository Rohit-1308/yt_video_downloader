{
  "name": "pully-core",
  "version": "0.7.4",
  "description": "Shared models used by pully, scany, and pully-server.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist/*",
    "build": "tsc",
    "test": "tsc && nyc --color -a ava -v",
    "version": "git add -A",
    "preversion": "rimraf ./dist/* && tsc && nyc --color -a ava -v",
    "postversion": "git push && git push --tags && npm publish",
    "inform-coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JimmyBoh/pully-core.git"
  },
  "author": "Jim Buck <jim@jimmyboh.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JimmyBoh/pully-core/issues"
  },
  "homepage": "https://github.com/JimmyBoh/pully-core#readme",
  "devDependencies": {
    "@types/node": "^10.12.3",
    "ava": "^0.25.0",
    "coveralls": "^3.0.2",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "lodash.template": "^4.4.0",
    "sanitize-filename": "^1.6.1",
    "url-pattern": "^1.0.3",
    "ytdl-core": "^0.28.0"
  },
  "ava": {
    "serial": true,
    "files": [
      "./dist/**/*.spec.js"
    ],
    "source": [
      "./dist/**/*.js"
    ]
  },
  "nyc": {
    "timeout": "2m",
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.js",
      "dist/debug.js",
      "dist/models.js"
    ]
  }
}
