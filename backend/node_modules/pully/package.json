{
  "name": "pully",
  "version": "2.7.0",
  "description": "A simple CLI for downloading high quality YouTube videos!",
  "main": "index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "pully": "./dist/bin/pully.js"
  },
  "scripts": {
    "clean": "rimraf ./dist/** ./temp/*/*",
    "build": "tsc",
    "debug": "tsc && node ./dist/debug",
    "test": "tsc && nyc --color -a ava -v",
    "bench": "tsc && node ./dist/benchmark",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "watch": "concurrently npm:watch:*",
    "watch:build": "tsc --watch",
    "watch:test": "ava --watch",
    "preversion": "npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags && npm publish"
  },
  "repository": {
    "url": "git+https://github.com/JimmyBoh/pully.git",
    "type": "git"
  },
  "keywords": [
    "youtube",
    "download",
    "cli",
    "ffmpeg",
    "encode",
    "api"
  ],
  "author": "Jim Buck <jim@jimmyboh.com>",
  "contributors": [
    "Eirik Albrigtsen <analsandblaster@gmail.com>",
    "Mario Tacke <https://mariotacke.io/>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/JimmyBoh/pully/issues"
  },
  "homepage": "https://github.com/JimmyBoh/pully#readme",
  "devDependencies": {
    "@types/benchmark": "^1.0.31",
    "@types/debug": "^0.0.31",
    "@types/fluent-ffmpeg": "^2.1.8",
    "@types/lodash.template": "^4.4.4",
    "@types/node": "^10.12.5",
    "@types/through": "0.0.29",
    "@types/tmp": "0.0.33",
    "ava": "^0.25.0",
    "benchmark": "^2.1.4",
    "concurrently": "^4.0.1",
    "coveralls": "^3.0.2",
    "microtime": "^2.1.8",
    "nyc": "^13.1.0",
    "rimraf": "^2.6.2",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.0.16",
    "chalk": "^2.4.1",
    "commander": "^2.19.0",
    "conf": "^2.1.0",
    "debug": "^4.1.0",
    "fluent-ffmpeg": "^2.1.2",
    "lodash.template": "^4.4.0",
    "lodash.throttle": "^4.1.1",
    "log-update": "^2.3.0",
    "mkdirp-promise": "^5.0.1",
    "pully-core": "^0.7.2",
    "sanitize-filename": "^1.6.1",
    "temp-dir": "^1.0.0",
    "update-notifier": "^2.5.0"
  },
  "ava": {
    "files": [
      "./dist/**/*.spec.js"
    ],
    "source": [
      "./dist/**/*.js"
    ]
  },
  "nyc": {
    "include": [
      "dist/**/*.js"
    ],
    "exclude": [
      "dist/**/*.spec.js",
      "dist/bin/pully.js",
      "dist/debug.js",
      "dist/benchmark.js",
      "dist/lib/models.js"
    ]
  }
}
