{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "removeComments": false,
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "noImplicitAny": true,
    "newLine": "lf"
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}